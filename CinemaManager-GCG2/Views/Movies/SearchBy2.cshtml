@model IEnumerable<CinemaManager_GCG2.Models.Cinema.Movie>

@{
    ViewData["Title"] = "SearchBy2";
}

<h1>SearchBy2</h1>
<form action="SearchBy2" method="get">
    <label>Genre:</label>
    <select name="genre">
        <option value="All">All</option>
        @foreach (var item in ViewBag.Genres)
        {
            <option value=@item>@item</option>
        }
    </select>
    <input name="title" />
    <input type="submit" value="Search" />
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gnre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gnre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
